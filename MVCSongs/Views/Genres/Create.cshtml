            color: #495057;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin-top: 40px;
        }

        .card {
            background-color: #ffffff;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #007bff;
            color: #ffffff;
            font-size: 1.5rem;
            padding: 10px;
            margin-bottom: 10px;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-create {
            background-color: #007bff;
            border-color: #007bff;
            color: #ffffff;
            width: 100%;
        }

            .btn-create:hover {
                background-color: #0056b3;
                border-color: #0056b3;
                color: #ffffff;
            }

        .btn-back {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #ffffff;
            width: 100%;
        }

            .btn-back:hover {
                background-color: #5a6268;
                border-color: #545b62;
                color: #ffffff;
            }
    </style>
</head>
