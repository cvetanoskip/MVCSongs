 @model MVCSongs.Models.Artist

@{
    ViewData["Title"] = "Delete Artist";
}

<!-- Custom Styles -->
<style>
    .delete-container {
        margin-top: 50px;
    }

    .delete-header {
        background-color: #dc3545;
        color: white;
        padding: 20px;
        text-align: center;
        border-radius: 8px 8px 0 0;
    }

    .delete-body {
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 0 0 8px 8px;
    }

    .delete-footer {
        text-align: center;
        margin-top: 20px;
    }

        .delete-footer .btn {
            margin: 0 10px;
        }

    .delete-row {
        margin-bottom: 10px;
    }

        .delete-row dt {
            font-weight: bold;
        }
</style>

<div class="container delete-container">
    <div class="delete-header">
        <h1>Delete Artist</h1>
        <h3>Are you sure you want to delete this artist?</h3>
    </div>
    <div class="delete-body">
        <h4>Artist Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2 delete-row">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10 delete-row">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2 delete-row">
                @Html.DisplayNameFor(model => model.BirthDate)
            </dt>
            <dd class="col-sm-10 delete-row">
                @Html.DisplayFor(model => model.BirthDate)
            </dd>
            <dt class="col-sm-2 delete-row">
                @Html.DisplayNameFor(model => model.Nationality)
            </dt>
            <dd class="col-sm-10 delete-row">
                @Html.DisplayFor(model => model.Nationality)
            </dd>
            <dt class="col-sm-2 delete-row">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10 delete-row">
                @Html.DisplayFor(model => model.Gender)
            </dd>
        </dl>
    </div>
    <div class="delete-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
