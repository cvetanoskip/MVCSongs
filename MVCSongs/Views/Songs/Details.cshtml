 @model MVCSongs.Models.Song

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCSongs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f0f0f0; /* Light gray background */
            font-family: 'Times New Roman', serif;
            color: #333; /* Dark text */
        }

        h1 {
            text-align: center;
            font-family: 'Palatino Linotype', 'Book Antiqua', Palatino, serif;
            color: #8b4513; /* Saddle brown heading color */
            margin-top: 20px;
        }

        .row {
            margin-bottom: 20px;
        }

        .col-sm-2 {
            font-weight: bold;
            color: #8b4513; /* Saddle brown label color */
            font-family: 'Garamond', serif;
        }

        .col-sm-10 {
            font-family: 'Garamond', serif;
        }

        .iframe-container {
            position: relative;
            width: 100%;
            padding-top: 56.25%; /* 16:9 aspect ratio */
        }

            .iframe-container iframe {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }

        .btn-edit {
            color: #fff; /* White text */
            background-color: #8b4513; /* Dark saddle brown button color */
            border-color: #8b4513;
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            .btn-edit:hover {
                background-color: #cd853f; /* Peru on hover */
                border-color: #cd853f;
            }

        .footer {
            background-color: #f8f9fa; /* Light footer background */
            padding: 20px 0;
            position: absolute;
            bottom: 0;
            width: 100%;
            text-align: center;
            color: #666; /* Footer text color */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Details</h1>
        <hr />

        <div class="row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Year)
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Year)
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Publisher)
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Publisher)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.AlbumCover)
            </div>
            <div class="col-sm-10">
                <img src="~/images/@Html.DisplayFor(model => model.AlbumCover)" height="200px" width="250px">
            </div>
        </div>
        @if (!string.IsNullOrEmpty(Model.SongUrl))
        {
            <div class="row">
                <div class="col-sm-2">
                    Song Video
                </div>
                <div class="col-sm-10">
                    <div class="iframe-container">
                        <iframe width="560" height="315" src="@Model.SongUrl" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        }

        <div class="row">
            <div class="col-sm-12">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-edit">Edit</a>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Additional scripts or plugins as needed -->
</body>
</html>
