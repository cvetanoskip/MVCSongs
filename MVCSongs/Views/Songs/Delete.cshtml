 @model MVCSongs.Models.Song

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MVCSongs</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
          crossorigin="anonymous">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #495057;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin-top: 40px;
        }

        .card {
            background-color: #ffffff;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #dc3545;
            color: #ffffff;
            font-size: 1.5rem;
            padding: 10px;
            margin-bottom: 10px;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-delete {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #ffffff;
            width: 100%;
        }

        .btn-delete:hover {
            background-color: #c82333;
            border-color: #bd2130;
            color: #ffffff;
        }

        .btn-back {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #ffffff;
            width: 100%;
        }

        .btn-back:hover {
            background-color: #5a6268;
            border-color: #545b62;
            color: #ffffff;
        }
        
      
    </style>
</head>
<body>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1 class="text-center">Delete Song</h1>
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this song?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Title)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
                
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Year)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Year)</dd>
                
                
                
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
                
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Publisher)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Publisher)</dd>
                
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.AlbumCover)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.AlbumCover)</dd>
                
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.SongUrl)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.SongUrl)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form id="deleteForm" asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-delete" /> |
                <a asp-action="Index" class="btn btn-secondary btn-back">Back to List</a>
            </form>
        </div>
    </div>
</div>



</body>
</html>
