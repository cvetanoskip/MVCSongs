@model MVCSongs.Models.SongArtist

@{
    ViewData["Title"] = "Delete";
}

<!-- Custom Styles -->
<style>
    body {
        background-color: #f5f5f5;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #333;
        text-align: center;
        margin-top: 30px;
        font-size: 2.5em;
    }

    h3 {
        color: #d9534f;
        text-align: center;
        margin-top: 20px;
        font-size: 1.8em;
    }

    .container {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 30px auto;
        max-width: 900px;
    }

    dl.row {
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    dt.col-sm-2 {
        font-weight: bold;
        color: #555;
    }

    dd.col-sm-10 {
        margin-bottom: 10px;
        color: #666;
    }

    .form-group {
        text-align: center;
        margin-top: 20px;
    }

        .form-group input[type="submit"] {
            background-color: #d9534f;
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 5px;
        }

        .form-group a {
            color: #007bff;
            text-decoration: none;
            margin: 0 10px;
        }

            .form-group a:hover {
                text-decoration: underline;
            }
</style>

<div class="container">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Song Artist</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Song)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Song.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Artist)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Artist.Id)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
